# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
POST    /                           controllers.Application.index()

GET		/login						controllers.Login.login()
POST	/login						controllers.Login.authenticate()
GET		/logout						controllers.Login.logout()

GET		/install					controllers.Installation.install()
POST	/installSystem				controllers.Installation.installSystem()

# == Client ==
GET		/client/showCreateClientForm	controllers.ClientController.showCreateClientForm()
POST	/client/createClient			controllers.ClientController.createClient()
GET		/client/clientOverview			controllers.ClientController.clientOverview()


# == Admin ==

POST	/admin/createUser			controllers.UserAdmin.createUser()
GET		/admin/showCreateUserForm	controllers.UserAdmin.showCreateUserForm()

# Map static resources from the /public folder to the /public path
GET     /assets/*file               controllers.Assets.at(path="/public", file)